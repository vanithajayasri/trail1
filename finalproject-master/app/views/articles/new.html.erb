
 
 
<h1>Create New Article</h1> 
<%= bootstrap_form_for(@article) do |f| %>
	<div class=row>
		<div class="col-md-4 col-md-offset-4">
			<%= f.text_field :title %>
		</div>
	</div>
	<div class=row>
		<div class="col-md-4 col-md-offset-4">
			<%= f.text_area :text %>
		</div>
	</div>
	<div class ="row">
		<div class="col-md-4 col-md-offset-4">
			<label for="date">Date</label>
			<br>
			<input type="text" id="date" data-provide='datepicker'>
		</div>
	</div>
	<br>
	<div class="row">
		<div class="col-md-2 col-md-offset-6">
			<%= f.submit%>
		</div>
	</div>
<% end %>
<script>
function addEventListenerList(list, event, fn) {
    for (var i = 0, len = list.length; i < len; i++) {
        list[i].addEventListener(event, fn, false);
    }
}

var ar_coins = document.getElementsByClassName('btn-default');
addEventListenerList(ar_coins, "click", validation_function);
function validation_function(){
	var title=document.getElementById("article_title");
	var article_t=document.getElementById("article_text");
	if (title.value=="" || article_t.value=="") {
		alert("Fields cannot be empty");
	}
	
}
var title_ev=document.getElementById("article_title");
var article_t_ev=document.getElementById("article_text");
title_ev.addEventListener("focusout", fn, false);
article_t_ev.addEventListener("focusout", fm, false);
function fn(){
	var title_fn=document.getElementById("article_title");
	if (title_fn.value=="") {
		alert("Field cannot be empty");
	}
}
function fm(){
	var article_t_fm=document.getElementById("article_text");
	if (article_t_fm.value=="") {
		alert("Field cannot be empty");
	}
}
</script>
